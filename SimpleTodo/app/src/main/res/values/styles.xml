<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:dialogTheme">@style/AppDialogTheme</item>
    </style>

    <!-- Custom dialog theme here extending from base -->
    <style name="AppDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <!-- Define color properties as desired -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorWhite</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Window properties as desired -->
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowBackground">@color/dialogGrey</item>
        <item name="android:windowTitleStyle">@style/DialogWindowTitle</item>
    </style>

    <!-- Dialog Title properties as desired -->
    <style name="DialogWindowTitle" parent="Base.DialogWindowTitle.AppCompat">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorDialogTitle</item>
        <item name="android:textSize">20dp</item>
    </style>

</resources>
